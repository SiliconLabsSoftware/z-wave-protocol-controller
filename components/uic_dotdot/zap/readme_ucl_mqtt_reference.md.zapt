  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "{{asPublicationName label}} Command Support Properties",
  "type": "object",
  "properties": {
      "value": {
          "type": "array",
          "items" : {
            "type": "string",
            "enum": [
